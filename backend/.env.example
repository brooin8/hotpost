# Database
DATABASE_URL="postgresql://user:password@localhost:5432/crosslisting?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000

# eBay API
EBAY_CLIENT_ID="your-ebay-client-id"
EBAY_CLIENT_SECRET="your-ebay-client-secret"
EBAY_REDIRECT_URI="http://localhost:3000/auth/marketplace/ebay/callback"
EBAY_SANDBOX=true

# Etsy API
ETSY_API_KEY="your-etsy-api-key"
ETSY_CLIENT_SECRET="your-etsy-client-secret"
ETSY_REDIRECT_URI="http://localhost:3000/auth/marketplace/etsy/callback"

# Whatnot API (if available)
WHATNOT_API_KEY=""
WHATNOT_API_SECRET=""

# File Upload
UPLOAD_DESTINATION="./uploads"
MAX_FILE_SIZE=10485760

# AWS S3 (optional, for production)
AWS_S3_BUCKET=""
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION=""

# Redis (optional, for caching and queues)
REDIS_URL="redis://localhost:6379"
